{
    "name": "slim/slim-api",
    "description": "API - Minicurso Integrado",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/rodriguesaalr/slim-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Alan Rodrigues",
            "email": "alan.rodrigues@grupointegrado.br"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "~2.5",
        "justinrainbow/json-schema": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
